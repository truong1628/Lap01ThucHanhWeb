@model IEnumerable<Student>

<a asp-controller="Student" asp-action="Create" class="btn btn-success mb-3">Create Student</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Ngành</th>
            <th>Giới tính</th>
            <th>Hệ ĐT</th>
            <th>Địa chỉ</th>
            <th>Email</th>
            <th>Ảnh</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>@s.DateofBirth</td>
                <td>
                    @{
                        string str = "";
                        switch (s.Branch)
                        {
                            case Branch.IT:
                                str = "CNTT";
                                break;
                            case Branch.BE:
                                str = "Kinh tế";
                                break;
                            case Branch.CE:
                                str = "Công trình";
                                break;
                            case Branch.EE:
                                str = "Điện - Điện tử";
                                break;
                        }
                    }
                    @str
                </td>
                <td>@(s.Gender == Gender.Male ? "Nam" : "Nữ")</td>
                <td>@(s.IsRegular ? "Chính quy" : "Phi chính quy")</td>
                <td>@s.Address</td>
                <td>@s.Email</td>
                <td>
                    @if (!string.IsNullOrEmpty(s.Photo))
                    {
                        <img src="~/images/@s.Photo" alt="Student photo" width="80" height="80" />
                    }
                    else
                    {
                        <span>No photo</span>
                    }
                </td>

            </tr>
        }
    </tbody>
</table>
