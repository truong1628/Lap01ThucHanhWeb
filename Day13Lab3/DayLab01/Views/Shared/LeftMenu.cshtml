@* Sidebar cho hệ thống Quản lý học sinh *@
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Logo -->
    <a href="~/Admin/Home/Index" class="brand-link">
        @* <img src="~/dist/img/AdminLTELogo.png" alt="AdminLTE Logo"
             class="brand-image img-circle elevation-3" style="opacity: .8"> *@
        <span class="brand-text font-weight-light">Quản lý học sinh</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Thông tin người dùng -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/images/default.png" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">Nguyễn Văn Trưởng</a>
            </div>
        </div>

        <!-- Tìm kiếm -->
        <div class="form-inline">
            <div class="input-group" data-widget="sidebar-search">
                <input class="form-control form-control-sidebar" type="search" placeholder="Tìm kiếm..." aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-sidebar">
                        <i class="fas fa-search fa-fw"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                <!-- Dashboard -->
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>Trang chủ</p>
                    </a>
                </li>

                <!-- Quản lý sinh viên -->
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Student" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-user-graduate"></i>
                        <p>Quản lý sinh viên</p>
                    </a>
                </li>

                <!-- Quản lý lớp học -->
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Class" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-chalkboard-teacher"></i>
                        <p>Quản lý lớp học</p>
                    </a>
                </li>

                <!-- Quản lý ngành -->
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Branch" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-book-open"></i>
                        <p>Ngành học</p>
                    </a>
                </li>

                <!-- Quản lý điểm -->
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Grade" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-star"></i>
                        <p>Quản lý điểm</p>
                    </a>
                </li>

                <!-- Quản lý giáo viên -->
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Teacher" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-user-tie"></i>
                        <p>Quản lý giáo viên</p>
                    </a>
                </li>

                <!-- Báo cáo -->
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Report" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-chart-bar"></i>
                        <p>Báo cáo - Thống kê</p>
                    </a>
                </li>

                <!-- Đăng xuất -->
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Account" asp-action="Logout" class="nav-link">
                        <i class="nav-icon fas fa-sign-out-alt"></i>
                        <p>Đăng xuất</p>
                    </a>
                </li>

            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>
